<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zuoqy.blog.dao.UserDao">
	
	<update id="updateUser" parameterType="user">
		update user 
		<set>
			<if test="token!=null and token!=''">token=#{token},</if>
			<if test="email!=null and email!=''">email=#{email},</if>
			<if test="name!=null and name!=''">name=#{name},</if>
			<if test="pwd!=null and pwd!=''">pwd=#{pwd},</if>
			<if test="sex!=null and sex!=''">sex=#{sex},</if>
			<if test="city!=null and city!=''">city=#{city},</if>
			<if test="sign!=null and sign!=''">sign=#{sign},</if>
			<if test="isActive!=null and isActive!=''">isActive=#{isActive},</if>
			<if test="img!=null and img!=''">img=#{img},</if>
			updateTime = now()
		</set>
		where uid=#{uid}
	</update>
	
	<insert id="addUser" parameterType="user">
		insert into user(uid,email,name,img,pwd,createTime,isActive)
		values(#{uid,jdbcType=VARCHAR},#{email,jdbcType=VARCHAR},#{name,jdbcType=VARCHAR},#{img,jdbcType=VARCHAR},#{pwd,jdbcType=VARCHAR},now(),'N');
	</insert>
	
	<select id="getUser" parameterType="java.util.Map" resultType="user">
		select * from user
		<include refid="whereUserSql" />
	</select>
	
	<sql id="whereUserSql">
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="uid !=null and sqNo !=''">
				and uid = #{uid}
			</if>
			<if test="email != null and email != ''">
				and email = #{email}
			</if>
		</trim>
	</sql>
</mapper>
