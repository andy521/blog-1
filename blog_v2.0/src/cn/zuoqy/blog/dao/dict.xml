<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zuoqy.blog.dao.DictDao">
	
	<select id="selectDict" parameterType="java.util.Map" resultType="dict">
		select * from dict
		<include refid="whereUserSql" />
	</select>
	
	<sql id="whereUserSql">
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="dictType !=null and dictType !=''">
				and dictType = #{dictType,jdbcType=VARCHAR}
			</if>
			<if test="flag !=null and flag !=''">
				and flag = #{flag,jdbcType=VARCHAR}
			</if>
		</trim>
	</sql>
</mapper>
